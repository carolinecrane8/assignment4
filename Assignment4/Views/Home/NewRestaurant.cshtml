@{
    ViewData["Title"] = "What's your favorite Restaurant??";
}
@model Assignment4.Models.NewRestaurant;

<!--This is the page where users can enter in their suggested favorite restaurant-->

<!--<h1>ViewBag.Title</h1>-->

<div id="cover-caption">
    <div class="container">
        <div class="row text-white">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto text-center form p-4">

                <div class="px-2">
                    <form asp-action="NewRestaurant" method="post" class="justify-content-center">
                        <div asp-validation-summary="All"></div>


                        <div class="form-group">
                            <label asp-for="CustName">Customer Name:</label>
                            <input asp-for="CustName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="RestaurantName" >Restaurant Name:</label>
                            <input asp-for="RestaurantName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="FavoriteDish" >Favorite Dish:</label>
                            <input asp-for="FavoriteDish" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone" >Phone Number:</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>


                        <button type="submit">Submit Your Favorite Place to Eat!!</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
